<UserControl x:Class="EventsManager.ParticipantGroupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="700" MinHeight="400">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" CornerRadius="10" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Группа / участие" FontSize="20" Grid.Row="0"/>

                <TextBlock Grid.Row="2" Text="Мероприятие" Opacity="0.75"/>
                <TextBox Grid.Row="3" x:Name="UserEventBox"
                         Height="30"
                         VerticalContentAlignment="Center"/>

                <TextBlock Grid.Row="5" Text="Направление" Opacity="0.75"/>
                <TextBox Grid.Row="6" x:Name="UserDirectionBox"
                         Height="30"
                         VerticalContentAlignment="Center"/>

                <TextBlock Grid.Row="8" Text="Выбрать мероприятие из базы" Opacity="0.75"/>
                <ComboBox Grid.Row="9" x:Name="EventPicker"
                          Height="30"
                          VerticalContentAlignment="Center"
                          DisplayMemberPath="Name"
                          IsEditable="True"
                          IsTextSearchEnabled="True"
                          SelectionChanged="EventPicker_SelectionChanged"/>

                <Button Grid.Row="11"
                        Content="Сохранить в профиль"
                        Height="34"
                        Click="SaveProfile_Click"/>

                <TextBlock Grid.Row="13"
                           Opacity="0.6"
                           TextWrapping="Wrap"
                           Text="Можно вручную вписать «Мероприятие/Направление» и сохранить. Либо выбрать мероприятие из базы — справа появятся активности."/>
            </Grid>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Активности мероприятия" FontSize="20"/>

                <TextBlock Grid.Row="2" x:Name="EventTitle"
                           FontSize="16"
                           Opacity="0.85"
                           TextWrapping="Wrap"/>

                <DataGrid Grid.Row="4" x:Name="ActivitiesGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="День" Binding="{Binding Day}" Width="70"/>
                        <DataGridTextColumn Header="Время" Binding="{Binding StartTime}" Width="120"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Модератор (ID)" Binding="{Binding Moderator}" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
