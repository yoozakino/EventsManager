<UserControl x:Class="EventsManager.ModerationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="900" MinHeight="520">

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <!-- было 340, делаем шире -->
            <ColumnDefinition Width="460"/>
        </Grid.ColumnDefinitions>

        <!-- Список активностей -->
        <Border Background="White" CornerRadius="10" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Модерация" FontSize="20"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Button Content="Обновить" Width="110" Height="30" Click="Refresh_Click"/>
                    <TextBlock x:Name="HintText"
                               Margin="12,6,0,0"
                               Opacity="0.65"
                               Text="Показываются только мои активности."/>
                </StackPanel>

                <DataGrid Grid.Row="4" x:Name="MyActivitiesGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          SelectionChanged="MyActivitiesGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                        <DataGridTextColumn Header="EventID" Binding="{Binding EventID}" Width="80"/>
                        <DataGridTextColumn Header="День" Binding="{Binding Day}" Width="70"/>
                        <DataGridTextColumn Header="Время" Binding="{Binding StartTime}" Width="120"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>

                    <TextBlock Text="Редактирование" FontSize="18"/>

                    <TextBlock Margin="0,12,0,2" Text="Название" Opacity="0.75"/>
                    <TextBox x:Name="NameBox" Height="30" VerticalContentAlignment="Center"/>

                    <TextBlock Margin="0,10,0,2" Text="День" Opacity="0.75"/>
                    <TextBox x:Name="DayBox" Height="30" VerticalContentAlignment="Center"/>

                    <TextBlock Margin="0,10,0,2"
                       Opacity="0.75"
                       TextWrapping="Wrap"
                       Text="Время (HH:MM или HH:MM:SS)"/>
                    <TextBox x:Name="TimeBox" Height="30" VerticalContentAlignment="Center"/>

                    <TextBlock Margin="0,10,0,2" Text="EventID" Opacity="0.75"/>
                    <TextBox x:Name="EventIdBox" Height="30" VerticalContentAlignment="Center"/>

                    <Button Margin="0,14,0,0"
                    Content="Сохранить"
                    Height="34"
                    Click="Save_Click"/>

                    <TextBlock Margin="0,10,0,0"
                       x:Name="EditHint"
                       Opacity="0.6"
                       TextWrapping="Wrap"
                       Text="Выбери активность слева, внеси правки и нажми «Сохранить»."/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
