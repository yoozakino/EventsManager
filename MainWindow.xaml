<Window x:Class="EventsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EventsManager"
        Title="EventsManager"
        WindowStartupLocation="CenterScreen"
        Width="1100" Height="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource BrushPrimary}">
            <DockPanel Margin="12,0">
                <Image Width="42" Height="42"
                       Stretch="Uniform"
                       Source="pack://application:,,,/logo.png"
                       DockPanel.Dock="Left"/>

                <TextBlock Text="EventsManager"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource BrushWhite}"
                           FontSize="20"
                           Margin="12,0,0,0"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button x:Name="BtnPublicEvents" Content="Мероприятия" Click="BtnPublicEvents_Click" Margin="12,6"/>
                    <Button x:Name="BtnProfile" Content="Профиль" Click="BtnProfile_Click" Margin="12,6"/>

                    <Button x:Name="BtnActivities" Content="Активности" Click="BtnActivities_Click" Margin="12,6"/>

                    <Button x:Name="BtnParticipantGroup" Content="Группа/активности" Click="BtnParticipantGroup_Click" Margin="12,6"/>
                    <Button x:Name="BtnModeration" Content="Модерация" Click="BtnModeration_Click" Margin="12,6"/>
                    <Button x:Name="BtnJury" Content="Оценивание" Click="BtnJury_Click" Margin="12,6"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Background="{StaticResource BrushWhite}">
            <ContentControl x:Name="MainContent"/>
            <local:AuthPage x:Name="Auth"/>
        </Grid>

        <Border x:Name="LogoOverlay"
                Grid.RowSpan="2"
                Background="{StaticResource BrushWhite}"
                Opacity="1">
            <Grid>
                <Image Width="520" Height="320"
                       Stretch="Uniform"
                       Source="logo.png"/>
            </Grid>
        </Border>
    </Grid>
</Window>
