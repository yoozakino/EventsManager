<UserControl x:Class="EventsManager.ProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="650" d:DesignWidth="1100">

    <Grid Background="#F3F5F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Профиль"
                   Margin="20,18,20,10"
                   FontSize="34"
                   Foreground="#3D5875"
                   FontWeight="SemiBold"/>

        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="440"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая карточка: ДАННЫЕ -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="14"
                    Padding="16"
                    BorderBrush="#E0E6EE"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="12"/>

                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Данные"
                               FontSize="16"
                               Foreground="#425B76"
                               FontWeight="SemiBold"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Foreground="#6B7C93"/>
                        <TextBox   Grid.Row="0" Grid.Column="1"
                                   x:Name="IdBox"
                                   Height="30"
                                   IsReadOnly="True"
                                   Background="White"
                                   Foreground="#111"
                                   BorderBrush="#D7DEE8"
                                   Padding="8,4"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Роль" Foreground="#6B7C93"/>
                        <TextBox   Grid.Row="2" Grid.Column="1"
                                   x:Name="RoleBox"
                                   Height="30"
                                   IsReadOnly="True"
                                   Background="White"
                                   Foreground="#111"
                                   BorderBrush="#D7DEE8"
                                   Padding="8,4"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Фото" Foreground="#6B7C93"/>
                        <TextBox   Grid.Row="4" Grid.Column="1"
                                   x:Name="PhotoPathBox"
                                   Height="30"
                                   Background="White"
                                   Foreground="#111"
                                   BorderBrush="#D7DEE8"
                                   Padding="8,4"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="ФИО" Foreground="#6B7C93"/>
                        <TextBox   Grid.Row="6" Grid.Column="1"
                                   x:Name="FioBox"
                                   Height="30"
                                   Background="White"
                                   Foreground="#111"
                                   BorderBrush="#D7DEE8"
                                   Padding="8,4"/>
                    </Grid>

                    <Border Grid.Row="4"
                            CornerRadius="12"
                            Background="#EEF3F9"
                            BorderBrush="#D7DEE8"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <Image x:Name="AvatarImage" Stretch="UniformToFill"/>
                    </Border>

                    <Button Grid.Row="6"
                            x:Name="SaveBtn"
                            Content="Сохранить"
                            Height="44"
                            HorizontalAlignment="Stretch"
                            Background="#4E6E8E"
                            Foreground="White"
                            BorderThickness="0"
                            Click="SaveBtn_Click"/>
                </Grid>
            </Border>

            <!-- Правая карточка -->
            <Border Grid.Column="2"
        Background="White"
        CornerRadius="14"
        Padding="16"
        BorderBrush="#E0E6EE"
        BorderThickness="1">

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="Контакты и анкета"
                       FontSize="16"
                       Foreground="#425B76"
                       FontWeight="SemiBold"/>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Email" Foreground="#6B7C93"/>
                            <TextBox   Grid.Row="0" Grid.Column="1" x:Name="EmailBox"
                           Height="30" Background="White" Foreground="#111"
                           BorderBrush="#D7DEE8" Padding="8,4"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон" Foreground="#6B7C93"/>
                            <TextBox   Grid.Row="2" Grid.Column="1" x:Name="PhoneBox"
                           Height="30" Background="White" Foreground="#111"
                           BorderBrush="#D7DEE8" Padding="8,4"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата рождения" Foreground="#6B7C93"/>
                            <DatePicker Grid.Row="4" Grid.Column="1" x:Name="BirthDatePicker" Height="30"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Страна" Foreground="#6B7C93"/>
                            <ComboBox  Grid.Row="6" Grid.Column="1" x:Name="CountryCombo" Height="30"/>
                        </Grid>

                        <TextBlock Margin="0,18,0,8"
                       Text="Дополнительно"
                       FontSize="16"
                       Foreground="#425B76"
                       FontWeight="SemiBold"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Направление" Foreground="#6B7C93"/>

                            <!-- ВЫСОКОЕ поле: не ставь Height="30" -->
                            <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="DirectionBox"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         VerticalContentAlignment="Top"
                         Background="White"
                         Foreground="#111"
                         BorderBrush="#D7DEE8"
                         Padding="8,6"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Event" Foreground="#6B7C93"/>
                            <TextBox   Grid.Row="2" Grid.Column="1"
                           x:Name="EventBox"
                           Height="30"
                           Background="White"
                           Foreground="#111"
                           BorderBrush="#D7DEE8"
                           Padding="8,4"/>
                        </Grid>

                        <TextBlock Margin="0,18,0,8"
                       Text="Смена пароля"
                       FontSize="16"
                       Foreground="#425B76"
                       FontWeight="SemiBold"/>

                        <Grid Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Текущий" Foreground="#6B7C93"/>
                            <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="OldPwdBox" Height="30"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Новый" Foreground="#6B7C93"/>
                            <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="NewPwdBox" Height="30"/>

                            <Button Grid.Row="2" Grid.Column="2"
                        x:Name="ChangePwdBtn"
                        Content="Сменить"
                        Height="34"
                        Margin="10,0,0,0"
                        Background="#4E6E8E"
                        Foreground="White"
                        BorderThickness="0"
                        Click="ChangePwdBtn_Click"/>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </Grid>
</UserControl>
