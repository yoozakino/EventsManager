<Window x:Class="EventsManager.ActivityEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Активность" Height="420" Width="640"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="ID" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="IdBox" Grid.Column="1" IsReadOnly="True" />

            <TextBlock Text="День" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox x:Name="DayBox" Grid.Column="3" SelectionChanged="DayBox_SelectionChanged"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Мероприятие*" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="EventBox" Grid.Column="1"
                      DisplayMemberPath="Name"
                      SelectionChanged="EventBox_SelectionChanged"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Название*" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Время начала*" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox x:Name="StartTimeBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="Модератор (ID)" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="ModeratorBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Длительность" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="90 минут" IsReadOnly="True"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="120" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Отмена" Width="120" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
