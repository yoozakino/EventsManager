<UserControl x:Class="EventsManager.AuthPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Затемнение на весь экран -->
    <Grid Background="#99000000">

        <!-- Карточка по центру -->
        <Border Background="White"
                CornerRadius="12"
                Padding="24"
                Width="520"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="22"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <Image Width="240"
                           Height="120"
                           Stretch="Uniform"
                           Source="pack://application:,,,/logo.png"/>
                    <TextBlock Text="Авторизация"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="ID Number:"/>
                    <TextBox x:Name="IdBox"
                             Grid.Row="0" Grid.Column="1"
                             Height="32"
                             VerticalContentAlignment="Center"
                             PreviewTextInput="IdBox_PreviewTextInput"
                             KeyDown="AnyBox_KeyDown"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Password:"/>
                    <PasswordBox x:Name="PwdBox"
                                 Grid.Row="2" Grid.Column="1"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 KeyDown="AnyBox_KeyDown"/>
                </Grid>

                <TextBlock x:Name="ErrorText"
                           Grid.Row="4"
                           Foreground="Red"
                           TextWrapping="Wrap"/>

                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="GuestBtn"
            Content="Гостевой режим"
            Width="160"
            Margin="0,0,12,0"
            Click="GuestBtn_Click"/>

                    <Button x:Name="LoginBtn"
            Content="Войти"
            Width="120"
            Click="LoginBtn_Click"
            Foreground="White"
            Background="{StaticResource BrushPrimary}"/>
                </StackPanel>


                <TextBlock Grid.Row="7"
                           Opacity="0.7"
                           VerticalAlignment="Bottom"
                           Text="Enter — выполнить вход. ID вводится только цифрами."/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
