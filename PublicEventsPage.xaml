<UserControl x:Class="EventsManager.PublicEventsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="600" MinHeight="400">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" CornerRadius="10" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Мероприятия" FontSize="20"/>

                <TextBox x:Name="SearchBox"
                         Grid.Row="2"
                         Height="30"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged"
                         ToolTip="Поиск по названию"/>

                <StackPanel x:Name="OrganizerPanel"
                            Grid.Row="4"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                    <Button Content="Добавить" Width="110" Margin="0,0,10,0"
                            Click="AddEvent_Click"/>
                    <Button Content="Удалить" Width="110"
                            Click="DeleteEvent_Click"/>
                </StackPanel>

                <ListBox x:Name="EventsList"
                         Grid.Row="6"
                         DisplayMemberPath="Name"
                         SelectionChanged="EventsList_SelectionChanged"/>
            </Grid>
        </Border>

        <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Детали" FontSize="20"/>

                <TextBlock x:Name="EventTitle" Grid.Row="2" FontSize="18" TextWrapping="Wrap"/>

                <TextBlock x:Name="EventInfo" Grid.Row="4" Opacity="0.85" TextWrapping="Wrap"/>

                <GroupBox Grid.Row="6" Header="Активности">
                    <ListView x:Name="ActivitiesList">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="День" DisplayMemberBinding="{Binding Day}" Width="60"/>
                                <GridViewColumn Header="Время" DisplayMemberBinding="{Binding StartTime}" Width="80"/>
                                <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="220"/>
                                <GridViewColumn Header="Модератор (ID)" DisplayMemberBinding="{Binding Moderator}" Width="110"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </GroupBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
